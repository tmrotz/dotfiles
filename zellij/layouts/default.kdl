layout {
    default_tab_template {
        pane size=1 {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 {
            plugin location="zellij:status-bar"
        }
    }
    tab name="bash" {
        pane cwd="~/"
    }
    tab name="neovim" {
        pane cwd="~/.config/nvim/" edit="."
    }
    tab name="dotfiles" {
        pane cwd="~/dotfiles/" edit="."
    }
    tab cwd="~/code/zig/ziglings.org/" name="ziglings" {
        pane stacked=true {
            pane name="neovim" edit="."
            pane name="bash"
        }
    }
}
